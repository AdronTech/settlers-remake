		time="1.0" />
	<job name="checkA1" type="AVAILABLE" successjob="checkA2" failjob="wait"
		dx="-3" dy="2" material="COAL" />
	<job name="checkA2" type="AVAILABLE" successjob="checkA3" failjob="wait"
		dx="3" dy="3" material="IRONORE" />

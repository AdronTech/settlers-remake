		dx="3" dy="1" material="IRON" />

	<!-- go to the iron stack -->
	<job name="outofdoor" type="WALK" successjob="toore1" failjob="gohome"
		direction="SOUTH_EAST" />

	<!-- go to the ore stack -->
	<job name="toore1" type="WALK" successjob="toore2" failjob="gohome"
		direction="SOUTH_WEST" />
	<job name="toore2" type="WALK" successjob="takeore1" failjob="gohome"
		direction="SOUTH_WEST" />


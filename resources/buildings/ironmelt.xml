		material="NO_MATERIAL" />
	<job name="takeore2" type="SET_MATERIAL" successjob="takeore3"
		failjob="gohome" material="IRONORE" />
	<job name="takeore3" type="TAKE" successjob="goputore0" failjob="gohome"
		material="IRONORE" />


<?xml version="1.1" encoding="UTF-8"?><!DOCTYPE building SYSTEM "building.dtd">
<building worker="MINER" workradius="0"> 

	<blocked dx="1" dy="3" />
	<blocked dx="2" dy="3" />
	<blocked dx="1" dy="2" />
	<blocked dx="1" dy="1" />
	<blocked dx="0" dy="0" />
	<blocked dx="-1" dy="-1" />
	<blocked dx="-1" dy="0" />
	<blocked dx="-1" dy="1" />
	<blocked dx="0" dy="1" />
	<blocked dx="-2" dy="0" />
	<blocked dx="-2" dy="1" />
	<blocked dx="-2" dy="-1" />
	<blocked dx="-2" dy="-2" />
	<blocked dx="2" dy="2" />
	<blocked dx="2" dy="1" />
	<blocked dx="3" dy="1" />
	<blocked dx="2" dy="0" />
	<blocked dx="1" dy="-1" />
	<blocked dx="1" dy="0" />
	<blocked dx="0" dy="-1" />
	<blocked dx="-1" dy="-2" />
	
	<door dx="0" dy="2" />
	
	<stack dx="0" dy="3" material="PLANK" buildrequired="5" />
	<stack dx="3" dy="5" material="STONE" buildrequired="2" />
	
	<bricklayer dx="-1" dy="2" direction="NORTH_EAST" />
	<bricklayer dx="1" dy="4" direction="NORTH_EAST" />
	<bricklayer dx="3" dy="4" direction="NORTH_WEST" />
	<bricklayer dx="4" dy="3" direction="NORTH_WEST" />
	<bricklayer dx="4" dy="2" direction="NORTH_WEST" />
	
	<flag dx="-2" dy="-3" />

<!-- going home job -->
<!-- Es fehlt eine Zufallsregel, die die Lebensmittel und den noch vorhandenen Erz zusammen bringt. Für andere Minen kopieren und umändern. -->
	<startjob name="gohome" />
	<job name="gohome" 		type="GO_TO" 			successjob="hide" 			failjob="waithome" 	dx="0" dy="2"/>
	<job name="waithome" 	type="WAIT" 			successjob="gohome" 		failjob="waithome" 	time="10"/>
	<job name="hide" 		type="HIDE" 			successjob="wait"			failjob="gohome"	/>
	<job name="wait"		type="WAIT"				successjob="check"			failjob="gohome"	time="10" />
	<job name="check"		type="NOT_FULL"			successjob="getironore"		failjob="noironore"	dx="0" dy="4" />
	
	<job name="getironore"	type="SET_MATERIAL"		successjob="show_full"		failjob="gohome"	material="IRONORE" />
	<job name="show_full"	type="SHOW"				successjob="getironore1"	failjob="gohome"	dx="0" dy="2" />
	<job name="getironore1"	type="GO_TO"			successjob="getironore2"	failjob="gohome"	dx="0" dy="4" />
	<job name="getironore2"	type="LOOK_AT"			successjob="getironore3"	failjob="gohome"	direction="SOUTH_WEST" />
	<job name="getironore3"	type="DROP"				successjob="getironore4"	failjob="gohome"	material="IRONORE" />
	<job name="getironore4"	type="SET_MATERIAL"		successjob="gohome"			failjob="gohome"	material="NO_MATERIAL" />
	
	<job name="noironore"	type="SET_MATERIAL"		successjob="show_leer"		failjob="gohome"	material="BASKET" />
	<job name="show_leer"	type="SHOW"				successjob="noironore1"		failjob="gohome"	dx="0" dy="2" />
	<job name="noironore1"	type="GO_TO"			successjob="noironore2"		failjob="hide"		dx="0" dy="4" />
	<job name="noironore2"	type="LOOK_AT"			successjob="noironore3"		failjob="hide"		direction="SOUTH_WEST" />
	<job name="noironore3"	type="PLAY_ACTION1"		successjob="noironore4"		failjob="hide"		time="5.0" />
	<job name="noironore4"	type="SET_MATERIAL"		successjob="gohome"			failjob="gohome"	material="BASKET" />



</building>
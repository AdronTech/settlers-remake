	<stack dx="5" dy="5" material="CROP" buildrequired="0" />
	<!--<stack dx="-2" dy="2" material="PIG" buildrequired="0" />-->
	<stack dx="3" dy="6" material="WATER" buildrequired="0" />
	<stack dx="1" dy="6" material="PLANK" buildrequired="8" />
	<stack dx="3" dy="6" material="STONE" buildrequired="3" />
	
	<bricklayer dx="-2" dy="3" direction="NORTH_EAST"/>
	<bricklayer dx="0" dy="5" direction="NORTH_EAST"/>
	<bricklayer dx="5" dy="6" direction="NORTH_WEST"/>
	<bricklayer dx="6" dy="5" direction="NORTH_WEST"/>
	<bricklayer dx="6" dy="3" direction="NORTH_WEST"/>
	
	<flag dx="-1" dy="-1"/>
	
	<startjob name="gohome"/>
	
<!-- going home job -->
	<job name="gohome" 		type="GO_TO" 			successjob="hide" 			failjob="waithome" 	dx="1" dy="2"/>
	<job name="waithome" 	type="WAIT" 			successjob="gohome" 		failjob="waithome" 	time="1"/>
	<job name="hide" 		type="HIDE" 			successjob="start" 			failjob="start"		/>
	
	<job name="start" 		type="WAIT" 			successjob="checkpig"	 	failjob="show" 		time="1"/>
	<job name="checkpig" 	type="NOT_FULL" 		successjob="checkcrop" 		failjob="hide" 		dx="5" dy="5" material="PIG"/>
	<job name="checkcrop"	type="AVAILABLE"		successjob="checkwater"		failjob="start"		dx="-2" dy="2" material="CROP"/>	
	<job name="checkwater"	type="AVAILABLE"		successjob="show"			failjob="start"		dx="3" dy="6" material="WATER"/>	
	<job name="show"		type="SHOW"				successjob="go_to_water"	failjob="hide"		dx="1" dy="2"/>
	<job name="go_to_water"	type="GO_TO"			successjob="look_at1"		failjob="gohome"	dx="3" dy="6"/>
	<job name="look_at1"	type="LOOK_AT"			successjob="takewater"		failjob="gohome"	direction="NORTH_EAST" />
	<job name="takewater"	type="TAKE"				successjob="changeMat1"		failjob="gohome"	material="WATER" />
	<job name="changeMat1"	type="SET_MATERIAL"		successjob="goback1"		failjob="gohome"	material="WATER" />
	<job name="goback1"		type="GO_TO"			successjob="look1_NE"		failjob="gohome"	dx="2" dy="1" />
	<job name="look1_NE"	type="LOOK_AT"			successjob="getwater1"		failjob="gohome"	direction="NORTH_EAST" />
	<job name="getwater1"	type="PLAY_ACTION1"		successjob="look1_SE"		failjob="gohome"	time="1.0" />
	<job name="look1_SE"	type="LOOK_AT"			successjob="getwater2"		failjob="gohome"	direction="SOUTH_EAST" />
	<job name="getwater2"	type="PLAY_ACTION1"		successjob="look1_SW"		failjob="gohome"	time="1.0" />
	<job name="look1_SW"	type="LOOK_AT"			successjob="getwater3"		failjob="gohome"	direction="SOUTH_WEST" />
	<job name="getwater3"	type="PLAY_ACTION1"		successjob="look1_NW"		failjob="gohome"	time="1.0" />
	<job name="look1_NW"	type="LOOK_AT"			successjob="getwater4"		failjob="gohome"	direction="NORTH_WEST" />
	<job name="getwater4"	type="PLAY_ACTION1"		successjob="changeMat2"		failjob="gohome"	time="1.0" />
	<job name="changeMat2"	type="SET_MATERIAL"		successjob="go_to_crop"		failjob="gohome"	material="NO_MATERIAL"/>	
	<job name="go_to_crop"	type="GO_TO"			successjob="gohome"		failjob="gohome"	dx="-2" dy="2" />	

</building>